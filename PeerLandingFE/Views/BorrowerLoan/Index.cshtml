@{
    ViewData["Title"] = "Borrower Loan";
    Layout = "_LayoutBorrower";
}

<h2>Borrower Loan</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addRequestLoanModal">Add Request
    Loan</button>

<table class="table table-striped" id="loanTable">
    <thead>
        <tr>
            <th>Jumlah Pinjaman</th>
            <th>Bunga</th>
            <th>Durasi</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<!-- Modal Add Request Loan -->
<!-- Modal Add Request Loan -->
<div class="modal fade" id="addRequestLoanModal" tabindex="-1" role="dialog" aria-labelledby="addRequestLoanModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRequestLoanModalLabel">Add Request Loan</h5>
            </div>
            <div class="modal-body">
                <form id="addRequestLoanForm">
                    <div class="form-group">
                        <label for="requestLoanAmount">Amount</label>
                        <input type="number" class="form-control" id="requestLoanAmount" required />
                    </div>
                    <div class="form-group">
                        <label for="requestLoanInterestRate">Interest Rate (%)</label>
                        <input type="number" step="0.01" class="form-control" id="requestLoanInterestRate" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="addRequestLoan()">Submit Loan Request</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal View Payments -->
<div class="modal fade" id="viewPaymentsModal" tabindex="-1" role="dialog" aria-labelledby="viewPaymentsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewPaymentsModalLabel">Monthly Payments</h5>
            </div>
            <div class="modal-body">
                <form id="viewPaymentsForm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Amount</th>
                                <th>PaymentId</th>
                                <th>Pay</th>
                            </tr>
                        </thead>
                        <tbody id="paymentRows">
                        </tbody>
                    </table>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onClick="submitPayment()">Pay</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                    onclick="$('#viewPaymentsModal').modal('hide');">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/loan.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
}